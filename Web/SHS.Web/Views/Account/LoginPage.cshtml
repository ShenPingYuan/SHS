<html lang="zh-CN" class="no-js">
<!--<![endif]-->
<head>
    <meta charset="UTF-8" />
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  -->
    <title>SHS登陆</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Login and Registration Form with HTML5 and CSS3" />
    <meta name="keywords" content="html5, css3, form, switch, animation, :target, pseudo-class" />
    <meta name="author" content="Codrops" />
    @*<link rel="icon" href="~/favicon.ico">*@
    <link rel="icon" sizes="any" mask="" href="~/favicon1.ico">
    <link rel="stylesheet" type="text/css" href="~/css/loginPage/demo.css" />
    <link rel="stylesheet" type="text/css" href="~/css/loginPage/style.css" />
    <link rel="stylesheet" type="text/css" href="~/css/loginPage/animate-custom.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/js/site.js?_=@DateTime.Now.ToString("yyyyMMddHHmmss")"></script>
</head>
<body>
    <div class="container">

        <header>
            <span><strong style="font-size:45px;color:#3d9db3">SHS后台管理系统</strong></span>
        </header>
        <div style="text-align:center;clear:both;">
            <script src="/gg_bd_ad_720x90.js" type="text/javascript"></script>
            <script src="/follow.js" type="text/javascript"></script>
        </div>
        <section>
            <div id="container_demo">
                <a class="hiddenanchor" id="toregister"></a>
                <a class="hiddenanchor" id="tologin"></a>
                <div id="wrapper">
                    <div id="login" class="animate form">
                        <form action="#" class="form-login" autocomplete="on" onsubmit="return false;">
                            <h1>登 陆</h1>
                            <p>
                                <label for="username" class="uname" data-icon="u"> 账号 </label>
                                <input id="username" name="username" required="required" type="text" placeholder="请输入登陆账号" />
                            </p>
                            <p>
                                <label for="password" class="youpasswd" data-icon="p"> 密码 </label>
                                <input id="password" name="password" required="required" type="password" placeholder="请输入登陆密码" />
                            </p>
                            <p class="keeplogin">
                                <input type="checkbox" name="loginkeeping" id="loginkeeping" value="loginkeeping" />
                                <label for="loginkeeping">保持登陆</label>
                            </p>
                            <p class="login button">
                                <img src="~/images/loading.gif" class="login-loading" alt="正在登陆..." />
                                <input type="submit" class="login-submit" value="登陆" />
                            </p>
                            <p class="change_link">
                                还 没 注 册 ?
                                <a href="#toregister" class="to_register">注册</a>
                            </p>
                        </form>
                    </div>
                    <div id="register" class="animate form">
                        <form action="#" class="form-register" autocomplete="on" onsubmit="return false;">
                            <h1> 注 册 </h1>
                            <p>
                                <label for="usernamesignup" class="uname" data-icon="u">账号</label>
                                <input id="usernamesignup" name="usernamesignup" required="required" type="text" placeholder="请输入登陆账号" />
                            </p>
                            <p>
                                <label for="emailsignup" class="youmail" data-icon="e"> 邮箱</label>
                                <input id="emailsignup" name="emailsignup" required="required" type="email" placeholder="mysupermail@mail.com" />
                            </p>
                            <p>
                                <label for="passwordsignup" class="youpasswd" data-icon="p">密码 </label>
                                <input id="passwordsignup" name="passwordsignup" required="required" type="password" placeholder="请输入登陆密码" />
                            </p>
                            <p>
                                <label for="passwordsignup_confirm" class="youpasswd" data-icon="p">确认密码 </label>
                                <input id="passwordsignup_confirm" name="passwordsignup_confirm" required="required" type="password" placeholder="请再次输入密码" />
                            </p>
                            <p class="signin button">
                                <img src="~/images/loading.gif" class="register-loading" alt="正在注册..." />
                                <input type="submit" class="register-submit" value="注册" />
                            </p>
                            <p class="change_link">
                                已经有账号 ?
                                <a href="#tologin" class="to_register"> 登陆 </a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
